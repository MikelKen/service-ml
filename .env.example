# Application Configuration
APP_NAME=service_ml
APP_VERSION=1.0.0
DESCRIPTION=FastAPI ML Service with GraphQL

# Server Configuration
HOST=0.0.0.0
PORT=3001
DEBUG=true
ENVIRONMENT=development

# Configuración de base de datos MongoDB
# Reemplaza estos valores con tu configuración de MongoDB
DB_URL_MONGODB=mongodb://localhost:27017/
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_HOST=localhost:27017
MONGODB_DATABASE=rrhh_db

# Configuración ML
ML_MODELS_PATH=trained_models
ML_DATA_PATH=data
ML_DEFAULT_MODEL=compatibility_model.pkl
ML_BATCH_SIZE=100
ML_MAX_FEATURES=10000
ML_RANDOM_STATE=42

# Configuración de entrenamiento
ML_TEST_SIZE=0.2
ML_VALIDATION_SIZE=0.2
ML_CROSS_VALIDATION_FOLDS=5
ML_ENABLE_FEATURE_SELECTION=true
ML_ENABLE_HYPERPARAMETER_TUNING=false

# Umbrales de rendimiento del modelo
ML_MIN_ACCURACY=0.7
ML_MIN_PRECISION=0.6
ML_MIN_RECALL=0.6
ML_MIN_F1_SCORE=0.6
ML_MIN_ROC_AUC=0.7

# Configuración de preprocesamiento de datos
ML_MAX_TEXT_LENGTH=1000
ML_MIN_TEXT_LENGTH=10
ML_TFIDF_MAX_FEATURES=5000

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# GraphQL Configuration
GRAPHQL_PATH=/graphql
GRAPHIQL_ENABLED=true

# API Configuration
API_PREFIX=/api